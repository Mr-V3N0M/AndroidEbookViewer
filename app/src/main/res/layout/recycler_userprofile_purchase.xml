<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/MainView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:elevation="10dp"
            android:layout_marginRight="7dp"
            android:layout_width="26dp"
            android:layout_height="30dp"
            android:text="&#8942;"
            android:id="@+id/optionMenu"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_alignParentRight="true" />

        <LinearLayout
            android:id="@+id/linearTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">


        <RelativeLayout
            android:id="@+id/imageContainer"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingLeft="11dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="6.75">

            <ImageView
                android:id="@+id/recyclerItemImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@color/colorImageBlank" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginRight="5dp"
            android:padding="4dp"
            android:id="@+id/textContainer"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="3.3"
            android:background="#fff">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout">

                <TextView
                    android:id="@+id/recyclerItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingRight="38dp"
                    android:textAppearance="@style/Custom_Font_Apperance_OuterContent_H3"
                    android:textStyle="bold"
                    android:textColor="@color/colorLibraryMenuSelect"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/relativeLayout"
                android:layout_centerHorizontal="true"
                android:paddingRight="20dp"
                android:id="@+id/relativeLayout2">

                <TextView
                    android:layout_margin="2dp"
                    android:id="@+id/recyclerItemDescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:textAppearance="@style/Custom_Font_Roboto"
                    android:maxLines="5"
                    android:textSize="12sp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/privacyLayout"
                android:textSize="12sp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/Color_DarkGray"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="2dp"
                    android:id="@+id/privacyIcon"
                    android:layout_margin="2dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:id="@+id/privacyText"
                    android:layout_margin="2dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/Color_DarkGray"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true" />
            </LinearLayout>

        </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:background="#ddd"
            android:layout_below="@id/linearTop"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>